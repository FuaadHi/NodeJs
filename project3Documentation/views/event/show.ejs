<!-- ********NavBar ************** -->
<%-include("../partials/navbar.ejs")-%>

<!-- ******** Page ********** -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">Featured</div>
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <hr />
          <p class="card-text"><%= event.discreption %></p>
          <p><%= event.location %></p>
          <p class="badge badge-secondary"><%= event.date.toDateString() %></p>
          <div>
            <a href="#" class="btn btn-primary">Edit</a>
            <button
              class="btn btn-danger"
              onclick="//deleteEvent()"
              id="deleteBtn"
              data-id="<%= event.id %> "
            >
              Delete
            </button>
          </div>
          <!-- <a href="<%= "/events/" %> " class="btn btn-primary"><< Back To Events Page </a> -->
        </div>
      </div>
    </div>
  </div>
</div>

