<!-- ********* Header *********** -->
<%- include("../partials/header.ejs")-%>

<!-- ********NavBar ************** -->
<%-include("../partials/navbar.ejs")-%>

<!-- ******** Page ********** -->
<h2 class="display-4 text-center mt-4">Edit The Event:</h2>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-9 offset-md-3">
      <% errors.forEach((err) => { %>
      <div class="alert alert-danger"><%= err.msg %></div>
      <% }) %>
      <form action="/events/update" method="POST">
        <div class="form-group">
          <label for="title">title</label>
          <input
            type="text"
            name="title"
            placeholder="Title"
            id="title"
            class="form-control"
            value="<%= event.title %> "
          />
        </div>
        <div class="form-group">
          <label for="discreption">Discreption</label>
          <textarea name="discreption" rows="4" class="form-control">
<%= event.discreption%></textarea
          >
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input
            type="text"
            name="location"
            placeholder="Location"
            id="location"
            class="form-control"
            value="<%= event.location%>"
          />
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input
            type="date"
            name="date"
            placeholder="date"
            id="date"
            class="form-control"
            value="<%= eventDate %>"
          />
        </div>
        <div class="form-controll">
          <button class="btn btn-primary" type="submit">update</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- ********** Footer*********** -->
<%-include("../partials/footer.ejs")-%>
